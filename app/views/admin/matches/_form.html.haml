= form_for([:admin, @match]) do |f|
  = label_tag :winner_name
  = text_field_tag :winner_name, @match ? @match.winner.display_name : '', autocomplete: "off"
  = label_tag :loser_name
  = text_field_tag :loser_name, @match ? @match.loser.display_name : '', autocomplete: "off"
  = f.label :occurred_at
  = f.text_field :occurred_at, value: @match.occurred_at || Time.current.strftime("%Y-%m-%d %H:%M:%S")
  %br/
  %p
    = link_to "Cancel", admin_matches_path
    &nbsp;|&nbsp;
    = submit_tag "Submit", data: { disable_with: "Working..." }
