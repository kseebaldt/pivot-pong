%h2 Match

= link_to "New Match", new_admin_match_path
= will_paginate @matches
%table
  %tr
    %th.date Date
    %th Winner
    %th Loser
    %th.action
  - @matches.each do |match|
    %tr{class: cycle("even", "odd")}
      %td.date= match.occurred_at.strftime("%Y-%m-%d")
      %td= match.winner.display_name
      %td= match.loser.display_name
      %td.action
        = link_to 'edit', edit_admin_match_path(match)
        |
        = link_to 'delete', [:admin, match], method: :delete, confirm: "Are you sure you want to do this?"
= will_paginate @matches
